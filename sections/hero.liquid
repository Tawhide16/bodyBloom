{% stylesheet %}
.hero-wrapper {
  --hero-height-offset: 0px;
}

body:has(> #header-group > .header-section > #header-component) .hero-wrapper:first-child {
  --hero-height-offset: var(--header-group-height, 0);
}

.hero {
  position: relative;
  min-height: calc(var(--hero-min-height) - var(--hero-height-offset));
  display: flex;
  flex-direction: column;
}

.hero[data-shopify-visual-preview] {
  --hero-min-height: 600px;
  min-height: 600px;
}

/* Container */
.hero__container {
  position: relative;
  overflow: hidden;
  border: var(--hero-border-width) var(--hero-border-style)
    rgb(var(--color-border-rgb) / var(--hero-border-opacity));
  min-height: inherit;
  align-items: var(--vertical-alignment-mobile);
  justify-content: var(--horizontal-alignment);
  z-index: var(--layer-base);
  display: flex;
  flex-direction: column;
}

@media screen and (min-width: 750px) {
  .hero__container {
    flex-direction: row;
    align-items: var(--vertical-alignment);
  }
}

/* Media Wrapper */
.hero__media-wrapper {
  position: absolute;
  inset: 0;
  display: grid;
  grid-template-columns: repeat(var(--hero-media-count, 1), 1fr);
  width: 100%;
  height: 100%;
  z-index: -1;
}

.hero__image,
.hero__video,
.hero__video-poster {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

/* Responsive aspect ratios */
@media screen and (max-width: 749px) {
  .hero__media-wrapper {
    grid-template-columns: 1fr;
  }
}

/* Content Wrapper */
.hero__content-wrapper {
  position: relative;
  z-index: var(--layer-flat);
  display: flex;
  flex-direction: var(--content-direction, column);
  justify-content: var(--vertical-alignment);
  align-items: var(--horizontal-alignment);
  padding: 1.5rem;
  text-align: center;
  gap: var(--gap, 12px);
  max-width: 90%;
  margin-inline: auto;
}

/* Responsive text alignment */
@media screen and (min-width: 750px) {
  .hero__content-wrapper {
    text-align: left;
    max-width: 60%;
    padding: 2rem 3rem;
  }
}

/* Make buttons and text scale */
.hero__content-wrapper h1,
.hero__content-wrapper h2,
.hero__content-wrapper p {
  word-wrap: break-word;
  line-height: 1.2;
}

.hero__content-wrapper h1 {
  font-size: clamp(1.8rem, 5vw, 3rem);
}
.hero__content-wrapper p {
  font-size: clamp(1rem, 2.5vw, 1.3rem);
}

/* Overlay & Blurred Image Styles */
.hero[data-blur-shadow='true'] .hero__container::before {
  content: '';
  position: absolute;
  inset: 0;
  box-shadow: rgb(0 0 0 / 5%) 0 0 1rem;
  mix-blend-mode: overlay;
  pointer-events: none;
  z-index: -1;
}

.hero__blurred-image {
  position: absolute;
  inset: 0;
  z-index: -1;
  mask-image: linear-gradient(to bottom, #000 0%, #000 60%, transparent 100%);
  filter: saturate(1.5);
  transform: translateY(50%);
  overflow: hidden;
}

.hero__blurred-image img,
.hero__blurred-image svg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: var(--blur-opacity);
  transform: scale(2, 1.25);
}

/* Mobile spacing fix */
@media screen and (max-width: 480px) {
  .hero__content-wrapper {
    padding: 1rem;
    max-width: 95%;
  }
  .hero__container {
    border-width: 0;
  }
  .hero__content-wrapper .button {
    width: 100%;
  }
}
{% endstylesheet %}
